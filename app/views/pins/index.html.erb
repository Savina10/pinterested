<div id="pins" class="pins transitions-enabled">

      <% @pins.each do |pin| %>
      <div class="box">
        
          <%# below is new 1 where pin.image.url is already included %>
          <%= link_to image_tag(pin.image.url(:medium)), pin %><br />
          <%# 1 Outputs the pin image on the pins index (Pins) page %>
          <%# 1 OLD output ---> image_tag pin.image.url(:medium) %>
        
          <%= pin.description %>
      
          <% if pin.user == current_user %><br />
            <%= link_to 'Edit', edit_pin_path(pin) %><br />
              <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %><br />
          <% end %>
        <br />
      </div>
    <% end %>
  </div>
</div>

<br />
